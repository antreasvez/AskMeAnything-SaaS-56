    <main>

        <div class="answerQuestionForm">
            <canvas id="qpk"></canvas>
        </div>

        <script>
            var qpk = document.getElementById('qpk').getContext('2d');

            var qpkChart = new Chart(qpk, {

                type: 'bar',
                data: {
                    labels: ['<%= tags[0].tag %>', '<%= tags[1].tag %>', '<%= tags[2].tag %>', '<%= tags[3].tag %>', '<%= tags[4].tag %>', '<%= tags[5].tag %>', '<%= tags[6].tag %>'],
                    datasets: [{
                        label: 'Popular keywords by count',
                        data: ['<%= tags[0].count %>', '<%= tags[1].count %>', '<%= tags[2].count %>', '<%= tags[3].count %>', '<%= tags[4].count %>', '<%= tags[5].count %>', '<%= tags[6].count %>'],
                        backgroundColor: [
                            'rgba(6, 59, 255, 0.73)',
                            'rgba(23, 81, 217, 0.62)',
                            'rgba(30, 91, 207, 0.56)',
                            'rgba(38, 121, 209, 0.46)',
                            'rgba(24, 123, 196, 0.34)',
                            'rgba(31, 121, 189, 0.33)',
                            'rgba(74, 152, 204, 0.25)',                           
                        ],
                        borderColor: [
                            'rgba(6, 59, 255, 1)',
                            'rgba(23, 81, 217, 1)',
                            'rgba(30, 91, 207, 1)',
                            'rgba(38, 121, 209, 1)',
                            'rgba(24, 123, 196, 1)',
                            'rgba(31, 121, 189, 1)',
                            'rgba(74, 152, 204, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true,
                                stepSize: 1
                            }
                        }]
                    },
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: "Popular Keywords by Count",
                        fontSize: 22
                    }
                }

            });



        </script>
       
