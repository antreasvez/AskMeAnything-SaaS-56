            <a href="/askquestion">Ask Question</a>
        </div>
        <% for (var question in allquestions) { %>
        <div class="questionCards">
        
                <div class="questionCard">
                <div class="questionCardLeft">
                    <a href="/answerquestion/<%= allquestions[question].qid %>"><img src="img/blu4.svg" position="center"></a>
                </div>
                <div class="questionCardRight">
                    <div class="questionCardTop">
                        <% if (loggedIn){ %>
                            <a class="questionTitle" href="/answerquestion/<%= allquestions[question].qid %>">
                                <%= allquestions[question].question %>
                            </a>
                        <% } else { %>
                            <p class="questionTitle">
                                <%= allquestions[question].question %>
                            </p>
                        <% } %>

                        <p class="questionText">
                            <%= allquestions[question].information %>
                        </p>
                    </div>
                    <div class="questionCardBottom">
                        <div class="questionTags">
                            <p class="questionTag">
                                <%= allquestions[question].tags %>
                            </p>
                             
                        </div>
                        <p class="questionDate">
                            Asked at <%= allquestions[question].qtime %> <br> by <span><%= allquestions[question].username %></span>
                        </p>
                    </div>
                </div>
            </div>
                
            

        </div>
        <% } %>   
    </main>

