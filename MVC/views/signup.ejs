        <p class="navTitle">SIGN UP</p>
        <div class="signDiv">
            <a href="/" class="signup">HOME</a>
        </div>

    </nav>
    <main>
        
        <form action="/signup" method="POST" class="loginForm">
            <label for="signup-username">
                Username
            </label>
            <input type="text" id="signup-username" name="username">
            <label for="signup-email">
                Email
            </label>
            <input type="email" id="signup-email" name="email">
            <label for="signup-password">
                Password
            </label>
            <input type="password" id="signup-password" name="password1">
            <label for="signup-password2" id="signup-password2">
                Repeat Password
            </label>
            <input type="password" id="signup-password2" name="password2">
            <button type="submit">Sign up</button>
        </form>
        <p class="goSignup">
            Allready have an account? 
            <a href="/login">
                 Log in!
            </a>

        </p>
       

    </main>

